<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="6dp"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Detalles de la Solicitud -->
        <TextView
            android:id="@+id/requestInfoTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Detalles de la solicitud"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/primary_color"
            android:layout_marginBottom="8dp" />

        <!-- Botones Cancelar y Finalizar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <!-- Botón Cancelar -->
            <Button
                android:id="@+id/cancelRequestButton"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Cancelar"
                android:textColor="@color/button_text_color"
                android:background="@drawable/button_alert_with_ripple"
                app:backgroundTint="@null"
                android:layout_marginEnd="8dp" />

            <!-- Botón Finalizar -->
            <Button
                android:id="@+id/completeRequestButton"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Finalizar"
                android:textColor="@color/white"
                android:background="@drawable/button_primary_with_ripple"
                app:backgroundTint="@null" />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>


